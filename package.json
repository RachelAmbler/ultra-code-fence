{
	"name": "ultra-code-fence",
	"version": "2026.2.47",
	"description": "A Super charged code fence replacement for Obsidian featuring multiple title styles, icons, line numbers, folding, scrolling, and command output formatting",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "eslint src/ && tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"prepare": "husky"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"code",
		"fence",
		"embed"
	],
	"author": "Rachel Ambler",
	"license": "MIT",
	"lint-staged": {
		"src/**/*.ts": "eslint"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^22.10.0",
		"@typescript-eslint/parser": "^8.54.0",
		"@vitest/coverage-v8": "^4.0.18",
		"builtin-modules": "^4.0.0",
		"esbuild": "^0.24.0",
		"eslint": "^9.39.2",
		"eslint-plugin-obsidianmd": "^0.1.9",
		"husky": "^9.1.7",
		"js-yaml": "^4.1.1",
		"jsdom": "^28.0.0",
		"lint-staged": "^16.2.7",
		"obsidian": "^1.7.2",
		"tslib": "^2.8.0",
		"typescript": "^5.7.0",
		"typescript-eslint": "^8.54.0",
		"vitest": "^4.0.18"
	}
}
